<Page x:Class="Appear.Views.StylesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:contr="clr-namespace:Appear.Controls"
      xmlns:bar="clr-namespace:Appear.Controls.Bars"
      xmlns:butt="clr-namespace:Appear.Controls.Buttons">
    <DockPanel>
        <bar:CloseBar DockPanel.Dock="Top"></bar:CloseBar>
        <StackPanel Orientation="Vertical">
            <contr:SelectionList Source="DockPositions" Text="MenuBar Dock"></contr:SelectionList>
            <contr:SelectionList Source="Styles" Text="Theme"></contr:SelectionList>
            <butt:CheckBoxButton Margin="0,20,0,0" Text="Maximize on Startup" Id="StartUpMax"></butt:CheckBoxButton>
            <butt:CheckBoxButton Text="Check for updates on Startup" Id="StartUpUpdate"></butt:CheckBoxButton>
        </StackPanel>
    </DockPanel>
</Page>
