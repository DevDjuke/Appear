<Page x:Class="Appear.Views.PresentView" Name="PresentWindowView"
      xmlns:src="clr-namespace:Appear.Core"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:bar="clr-namespace:Appear.Controls.Bars"
      xmlns:vm="clr-namespace:Appear.ViewModel"
      xmlns:pres="clr-namespace:Appear.Controls.Present">
    <DockPanel DataContext="{Binding ElementName=PresentWindowView}">
        <bar:CloseBar DockPanel.Dock="Top"></bar:CloseBar>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <pres:PicturePreview Assets="{Binding Assets}"></pres:PicturePreview>
                <!--<pres:ManualPanel Assets="{Binding Assets}"></pres:ManualPanel>-->
                <pres:ManualPanel></pres:ManualPanel>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Page>
