<UserControl x:Class="Appear.Controls.Bars.CloseBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Appear.Controls.Bars"
             xmlns:butt="clr-namespace:Appear.Controls.Buttons">

    <Border Style="{StaticResource BarDialog}">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" HorizontalAlignment="Right"> 
            <butt:IconButton Icon="exit" Action="CloseDialog"></butt:IconButton>
        </StackPanel>
    </Border>
</UserControl>
