<UserControl x:Class="Appear.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls"
             xmlns:vm="clr-namespace:Appear.ViewModel.Controls"
             xmlns:conv="clr-namespace:Appear.Converters">
    <UserControl.DataContext>
        <vm:IconButtonViewModel></vm:IconButtonViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <conv:KeyToAssetConverter x:Key="findIcon"></conv:KeyToAssetConverter>
    </UserControl.Resources>
    <Button Style="{StaticResource ButtonDefault_Square}" 
                Width="30" 
                Margin="3"
                Height="30"
                Content="{Binding Icon, Converter={StaticResource findIcon}}"
                Click="OnClick"
                HorizontalAlignment="Center">
    </Button>
</UserControl>
