<UserControl x:Class="Appear.Controls.TextButton" Name="TextButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls">
    <StackPanel DataContext="{Binding ElementName=TextButtonControl}">
        <Button Style="{StaticResource ButtonDefault_Rect}" 
                Width="{Binding Size}" 
                Margin="3"
                Height="30"
                Click="OnClick"
                Content="{Binding Text}"
                HorizontalAlignment="Center">
        </Button>
    </StackPanel>
</UserControl>
