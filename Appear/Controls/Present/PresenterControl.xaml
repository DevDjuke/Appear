<UserControl x:Class="Appear.Controls.Present.PresenterControl" Name="PresenterController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls.Present">
    <StackPanel DataContext="{Binding ElementName=PresenterController}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <local:ImagePresenter Path="{Binding Path}" ImageHeight="{Binding ImageHeight}" ImageWidth="{Binding ImageWidth}"></local:ImagePresenter>
    </StackPanel>
</UserControl>
