<UserControl x:Class="Appear.Controls.Present.PicturePreview" Name="PicturePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Margin="0,20,0,0" Orientation="Horizontal" DataContext="{Binding ElementName=PicturePreviewControl}">
        <Image 
            Source="{Binding PreviousPath}"
            Stretch="Uniform" 
            Height="130" 
            Width="130">
        </Image>
        <Image 
            Source="{Binding CurrentPath}"
            Stretch="Uniform" 
            Height="180" 
            Width="180">
        </Image>
        <Image 
            Source="{Binding NextPath}"
            Stretch="Uniform" 
            Height="130" 
            Width="130">
        </Image>
    </StackPanel>
</UserControl>
