<UserControl x:Class="Appear.Controls.CloseBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls">
    <Border Padding="15,0" Background="AliceBlue" Height="50" CornerRadius="20,20,0,0">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" HorizontalAlignment="Right"> 
            <local:IconButton Icon="exit" Action="CloseStyles"></local:IconButton>
        </StackPanel>
    </Border>
</UserControl>
