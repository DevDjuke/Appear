<UserControl x:Class="Appear.Controls.Panels.MainView.ControlPanel" Name="ControlPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:butt="clr-namespace:Appear.Controls.Components.Buttons"
             Width="300">
    <StackPanel DataContext="{Binding ElementName=ControlPanelControl}">
        <TextBlock Text="{Binding AssetName}"></TextBlock>
        <butt:TextButton Text="PRESENT" Action="PresentAsset" Size="150"></butt:TextButton>
    </StackPanel>
</UserControl>
