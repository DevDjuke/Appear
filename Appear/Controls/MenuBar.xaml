<UserControl x:Class="Appear.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls">
    <Border Padding="15,0" Background="white" Height="50" CornerRadius="20,20,0,0">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <local:IconButton Icon="max" Action="MaxMain"></local:IconButton>
                <local:IconButton Icon="exit" Action="CloseMain"></local:IconButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <local:TextButton Text="ASSETS" Size="100"></local:TextButton>
                <local:TextButton Text="CONTROLS" Size="100"></local:TextButton>
                <local:TextButton Text="STYLES" Action="OpenStyles" Size="100"></local:TextButton>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
