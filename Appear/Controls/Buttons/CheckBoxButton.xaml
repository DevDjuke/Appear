<UserControl x:Class="Appear.Controls.Buttons.CheckBoxButton" Name="CheckBoxButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appear.Controls.Buttons">
    <StackPanel Margin="10" Orientation="Horizontal" DataContext="{Binding ElementName=CheckBoxButtonControl}">
        <TextBlock Text="{Binding Text}" FontFamily="Verdana" FontWeight="DemiBold" Padding="5">
            <TextBlock.TextDecorations>
                <TextDecoration PenOffset="3" PenOffsetUnit="Pixel"/>
            </TextBlock.TextDecorations>
        </TextBlock>
        <CheckBox VerticalAlignment="Center" Margin="40,0,0,0" IsChecked="{Binding IsChecked}" Checked="HandleChecked" Unchecked="HandleUnchecked"></CheckBox>
    </StackPanel>
</UserControl>
